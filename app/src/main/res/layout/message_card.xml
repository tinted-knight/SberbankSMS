<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivOperationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/red_coin"
        android:src="@drawable/point_transparent"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tvSumma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivOperationIcon"
        android:text="@string/summa"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@android:color/primary_text_light"
        android:textStyle="bold"
        />

    <TextView
        android:text="@string/sample_agent_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAgent"
        android:layout_below="@+id/tvSumma"
        android:layout_toStartOf="@+id/tvDate"
        android:layout_toEndOf="@+id/ivOperationIcon"/>

    <TextView
        android:text="@string/sample_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDate"
        android:textColor="@android:color/tertiary_text_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>