<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="detail_date">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="detail_date2" parent="detail_agent">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="detail_card" parent="detail_agent">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="detail_agent" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="detail_summa">
        <item name="android:textColor">@color/summa_expense</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="detail_balance" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_description">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/btn_colored</item>

    </style>

    <style name="AppTheme.TextSmall" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
